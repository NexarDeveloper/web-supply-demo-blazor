@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        @if (!_drawerOpen)
        {
            <MudIconButton Icon=@Icons.Material.Filled.Menu Color=Color.Inherit Edge=Edge.Start OnClick=@(e => DrawerToggle()) />
        }
        <MudHidden Breakpoint=Breakpoint.Xs>
            <MudLink Href=@AppData.ApiEndpoint Color=Color.Inherit Target="_blank">@AppData.ApiEndpoint</MudLink>
        </MudHidden>
        <MudSpacer />
        <MudIconButton Icon=@Icons.Material.Filled.Search Color=Color.Inherit Title="Octopart search page" Href="https://octopart.com/api/v4/values" Target="_blank" />
        <MudIconButton Icon=@Icons.Material.Filled.Home Color=Color.Inherit Title="Nexar home page" Href=@AppData.NexarDotCom Target="_blank" />
        <MudIconButton Icon=@Icons.Custom.Brands.GitHub Color=Color.Inherit Title="Source code" Href="https://github.com/NexarDeveloper/web-supply-demo-blazor" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open=@_drawerOpen Elevation=1>
        <MudDrawerHeader>
            @if (_drawerOpen)
            {
                <MudIconButton Icon=@Icons.Material.Filled.Menu Color=Color.Inherit Edge=Edge.Start OnClick=@(e => DrawerToggle()) />
            }
            <MudText Typo=Typo.h6>Nexar.Supply</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth=MaxWidth.Large>
            @Body
            <br />
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
